<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CinePicasso">

    <ScrollView
        android:id="@+id/scrollView7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Space
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleX="1"
                android:gravity="center"
                android:textSize="35sp"
                android:text="@string/cp_tv_title_text" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <ImageView
                android:id="@+id/cp_iv_sala_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars"
                android:contentDescription="@string/cp_iv_1_content"
                android:background="@color/black" />

            <EditText
                android:id="@+id/cp_edt_sala_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name"
                android:ems="10"
                android:hint="@string/cp_edt_sala_1_text"
                android:inputType="text"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:textColorHint="@android:color/black" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <ImageView
                android:id="@+id/cp_iv_sala_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars"
                android:contentDescription="@string/cp_iv_2_content"
                android:background="@color/black" />

            <EditText
                android:id="@+id/cp_edt_sala_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name"
                android:ems="10"
                android:hint="@string/cp_edt_sala_2_text"
                android:inputType="text"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:textColorHint="@android:color/black" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <ImageView
                android:id="@+id/cp_iv_sala_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars"
                android:contentDescription="@string/cp_iv_3_content"
                android:background="@color/black" />

            <EditText
                android:id="@+id/cp_edt_sala_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name"
                android:ems="10"
                android:hint="@string/cp_edt_sala_3_text"
                android:inputType="text"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:textColorHint="@android:color/black" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>